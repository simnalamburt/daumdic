#!/usr/bin/env ruby
require_relative 'lib/daumdic'

# Handle ^C gracefully
trap('SIGINT') { puts; exit 1 }

# REPL
puts 'Daum ì‚¬ì „'
puts
loop do
  print '> '
  input = gets

  # Handle ^D gracefully
  if input.nil? then puts; exit end
  if input[-1] != "\n" then puts; next end

  result = search(input)
  puts "\e[33m#{result}\e[0m" unless result.nil?
end
